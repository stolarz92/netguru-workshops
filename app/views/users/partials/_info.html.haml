.panel.panel-primary
  .panel-heading
    .panel-title
      Info
  %ul.list-group
    %li.list-group-item
      %strong
        Name:
      = current_user.firstname + ' ' + current_user.lastname
    %li.list-group-item
      %strong
        Email:
      = current_user.email
    %li.list-group-item
      %strong
        With us from:
      = current_user.created_at.strftime('%d-%m-%Y')
    %li.list-group-item
      %strong
        Last logged in:
      = current_user.last_sign_in_at.strftime('%H:%m, %d-%m-%Y')