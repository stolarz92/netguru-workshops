%h2 Sign in
.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
  .panel.panel-info
    .panel-heading
      .panel-title Sign in form
    .panel-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal', role: 'form'}) do |f|
        = f.error_notification
        .form-group
          = f.label :email, :class => 'col-md-3 control-label'
          .col-md-9
            = f.input_field :email, label: false, required: true, autofocus: true, class: 'form-control'
        .form-group
          = f.label :password, :class => 'col-md-3 control-label'
          .col-md-9
            = f.input_field :password, label: false, required: false, autofocus: true, class: 'form-control'
        .input-group.col-md-9.col-md-offset-3.checkbox
          .checkbox
            = f.input_field :remember_me, inline_label: 'Remember me', as: :boolean if devise_mapping.rememberable?
        .form-group.sign-in-buttons
          .col-md-offset-3.col-md-9
            = f.button :submit, "Sign in", class: 'btn btn-info'
            = render "devise/shared/links"
